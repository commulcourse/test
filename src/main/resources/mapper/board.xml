<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.test1.model.BoardRepository">
	<select id="findAll" resultType="shop.mtcoding.test1.model.Board">
		select * from board_tb
	</select>
	
	<select id="findById" resultType="shop.mtcoding.test1.model.Board">
		select * from board_tb where id = #{id}
	</select>

	<insert id="insert">
		insert into board_tb(title, user_id, created_at) values(#{title}, #{userid}, now())
	</insert>

	<delete id="deleteById">
		delete from board_tb where id = #{id}
	</delete>

	<update id="updateById">
		update board_tb 
		set title = #{title},
            userId = #{userid},
            created_at = now()
		where id = #{id}
	</update>
</mapper>
